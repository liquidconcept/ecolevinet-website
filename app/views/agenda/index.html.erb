<div id="agenda">
  <h2/>Agenda</h2>

  <ul class="infos">
    <% @events.all.each do |event| %>
      <li>
      <h3>
      <div class="event_container">
            <%  type  = event.description.blank? ? 'empty':'full' %>
        <div class="date <%= 'empty' if type == 'empty' %>">
          <%  if type == 'full' %>
              <%= link_to image_tag('right.png', :class => type),'#' %>
            <%  end %>
          <%=raw  date_for(event) %>
        </div>
        <br />
        <div class="title">
           <%=link_to event.title, event_path(event) %>
           <br />
         </div>
       </div>
     </h3>
     <div class="description" style="display:none;">
       <p><%=raw event.description if event.description %></p>
     </div>
     </li>
     <% end %>
   </ul>
</div>
