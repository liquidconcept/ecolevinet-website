<div class='portfolio'>
  <div id="left_col">
    <div class="<%='section_' + in_section(@page).id.to_s %>">
      <h1><%=  @portfolio_entry.title %> </h1>
      <%=  raw @portfolio_entry.body %><br/>
      <% @portfolio_entry.images.each_with_index do |image, index| -%>
        <% if @portfolio_entry.images.count == 1 %>
          <%= link_to image_fu(image, '420x300#',  {:class => "thumbnails_img"  }), image.url ,  {:rel => "album_#{@portfolio_entry.id}"} %>
        <% else %>
          <%= link_to image_fu(image, '105x92#c',  {:class => "thumbnails_img"  }), image.url ,  {:rel => "album_#{@portfolio_entry.id}"} %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div id="right_col">
    <div class="<%='section_' + in_section(@page).id.to_s %>">
      <h1>Galeries</h1>
      <% if @portfolio_entries.many?%>
        <ul>
          <% @portfolio_entries.each do | portfolio | -%>
            <li class="clearfix"><%= link_to portfolio.title, portfolio_path(portfolio,:section_id => in_section(@page))  %></li>
          <% end -%>
        </ul>
      <% end %>
    </div>
  </div>
</div>

<% content_for :javascript_libraries, jquery_include_tags(:jquery_ui => false) %>
