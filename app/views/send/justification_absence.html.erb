<%= form_tag('/send/resultat_justification') do -%>

<h2>
Justification d’absence à la direction de l’établissement 
</h2>
<p>Elève </p><br/>
<%= label_tag :nom %><br/>
<%= text_field_tag :nom %>
<br />

<%= label_tag :prenom %><br/>
<%= text_field_tag :prenom %>
<br />

<%= label_tag :classe %><br/>
<%= text_field_tag :classe %>
<br />
<p>Dates de l’absence </p>
<p>
du  
  <%= label_tag 'Date de début' %>
  <%= select_datetime DateTime.now, :prefix => :start_date %>
</p>
<p>
au  
<%= label_tag 'Date de fin' %>
<%= select_datetime DateTime.now, :prefix => :end_date %>
</p>
<p>
Motif :
  <%= text_area_tag :motive,nil, :rows => 10,  :cols => 60 %>
</p>
<p>
  <%= label_tag 'Email d’un des parents :' %>
  <%= email_field_tag :email %>
</p>
<p>
  <%= label_tag 'Téléphone d’un des parents :' %>
  <%= text_field_tag :phone %>
</p>

  <%= submit_tag 'Envoyer', :class => 'submit'%></p><br />
<% end -%>
