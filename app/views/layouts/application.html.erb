<!DOCTYPE html>
<%= render :partial => "/shared/html_tag" %>
<% site_bar = render(:partial => "/shared/site_bar", :locals => {:head => true}) -%>

<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "screen", "refinery/site_bar" %>
<% end %>

<%= render :partial => "/shared/head" %>

<body>
  <%= site_bar -%>

  <div id="header">
    <%= link_to(image_tag("logo_vinet.png", :alt => ""), "/") %>
  </div>

  <div id="page">
    <div id="content">

      <div id="nav">
        <%= render :partial => '/shared/menu', :locals => { :page => @page} %>
      </div>
      <div id="section_data">
        <% Section.all.each_with_index do |section, index| %>
          <div id="section_<%= index + 1 %>" >
		    <% if index == 0 %>
              <%= image_fu section.image, '870x328', :class => "nav_picture", :alt => section.titre %>
              <div class="nav_text" >
                <h2><%=raw section.titre   %></h2>
              </div>
			<% else %>
			  <div class="nav_wrap">
		        <%= image_tag "section_#{index + 1}_title.png", :class => 'nav_img' %>
				<span class="nav_background"></span>
			  </div>
              <%= image_fu section.image, '870x328', :class => "nav_picture", :alt => section.titre %>
              <div class="nav_text" >
                <h2><%=raw section.titre   %></h2>
                <p> <%=raw section.chapeau %></p>
              </div>
			<% end %>
          </div>
        <% end %>
	    <div id="section_6" >
		  <div class="nav_wrap">
		    <%= image_tag "section_6_title.png", :class => 'nav_img' %>
			<span class="nav_background active"></span>
		  </div>
		  <%= image_tag "section_6_picture.jpg", :class => 'nav_picture' %>
		</div>
      </div>

    <div id="page_content">
      <%= yield %>
    </div>

    <div id="clear"></div>

    </div>
  </div>

  <div id="footer">
  </div>

  <%= render :partial => "/shared/javascripts" %>
</body>
</html>
