<!DOCTYPE html>
<%= render :partial => "/shared/html_tag" %>
<% site_bar = render(:partial => "/shared/site_bar", :locals => {:head => true}) -%>

<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "screen", "refinery/site_bar" %>
<% end %>

<%= render :partial => "/shared/head" %>

<body>
  <%= site_bar -%>

  <div id="header">
    <%= link_to(image_tag("logo_vinet.png", :alt => ""), "/") %>
  </div>

  <div id="page">
    <div id="content">

      <div id="nav">
        <%= render :partial => '/shared/menu', :locals => { :page => @page} %>
      </div>
      <div id="sectiondata">
        <% Section.all.each_with_index do |s,i| %>
          <div id="section<%= i+1 %>"  <%=raw 'style="display: none"' unless @page.nested_path.include? s.page.nested_path %>  >
            <%= image_fu s.image, '870x328', :id => "nav_picture", :alt => "" %>
            <div class="nav_text" >
              <h2><%=raw  s.heading_title   %></h2>
              <p> <%=raw  s.heading %></p>
            </div>
          </div>
        <% end %>
      </div>


      <div id='horizontalaccordion'>
        <ul>
          <% Section.all.each_with_index do |s,i| %>
            <li <%= "class='current'" if @page.nested_path.include? s.page.nested_path %>>
            <%= link_to s.title, url_for(s.page.url), :'data-sectionid' => i+1 %>
            </li>
          <% end %>
        </ul>
      </div>

    <div id="page_content">
      <%= yield %>
    </div>

    <div id="clear"></div>

    </div>
  </div>

  <div id="footer">
  </div>

  <%= render :partial => "/shared/javascripts" %>
</body>
</html>
