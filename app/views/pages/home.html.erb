      <br />
      <%= email_field_tag :email, '', :placeholder => "Email", :required => "required" %>
      <br />
      <%= check_box_tag :booklet %><span>Je désire recevoir la brochure de l'école</span><br />
      <%= text_area_tag :message, '', :placeholder => 'Message', :required => "required" %>
