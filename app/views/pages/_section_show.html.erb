<% articles_rendered = false%>
<% page.children.each do |child| %>
  <% case child.title %>
  <% when "news" %>
    <%= render :partial => 'news',  :locals => {:section => page.section}  if page.section.news.any?%>
  <% when "Agenda" %>
    <%= render :partial => 'agendas',      :locals => {:section => page.section} %>
  <% when "Galerie" %>
    <%= render :partial => 'galeries', :locals => {:section => page.section} if page.section.portfolio_entries.any? %>
  <% else %>
    <%= render :partial => 'articles',     :locals => {:section => page.section} unless articles_rendered %>
    <% articles_rendered = true %>
  <% end %>
<% end %>
