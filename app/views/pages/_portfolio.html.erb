<div class="block <%= odd ? 'left' : 'right' %> ">
 <%# first portfolio %>
 <%  first_portfolio_entry = section.portfolio_entries.first %>

  <div class="layer">
    <%= image_fu first_portfolio_entry.images.first, '420x300#',
      {:class => "portfolio_img", :alt => "#{first_portfolio_entry.title}" }%>
  </div>
	
  <h1>
  <%= link_to 'Galerie', '/portfolio/' %>
  </h1>
<% section.portfolio_entries.each do  |portfolio_entry| %>
  <div id="flash" class="portfolio scrollable <%= 'current' if portfolio_entry == first_portfolio_entry %>">
    <% portfolio_entry.images.each do |image| %>
      <div class="img_resize">
        <%= link_to image_fu(image, '105x92+' + (image.width/2).to_s + '+' + (image.height/2).to_s,  {:class => "thumbnails_img", :alt => portfolio_entry.title  }) ,
          image.url ,  {:rel => "prettyPhoto[#{portfolio_entry.title.gsub(' ','')}]"} %>
      </div>
    <% end %>
  </div>
<% end %>
<div id="month_switcher"><a href="#" class="left"></a><p>
  <%= link_to first_portfolio_entry.title, '/portfolio/' + first_portfolio_entry.title  %>
  </p><a href="#" class="right"></a></div>

</div>

<% content_for :javascripts do %>
  <%= javascript_include_tag 'jquery.prettyPhoto.js' %>
<% end %>

<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "prettyPhoto" %>
<% end %>


