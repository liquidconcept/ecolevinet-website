<div class="block <%= odd ? 'left' : 'right' %> ">
 <%# randomly chosen portfolio entry  %>
 <%  porfolio_entry = section.portfolio_entries[rand(section.portfolio_entries.length)] %>

  <div class="layer">
    <%= image_fu portfolio_entry.images.first, '420x300',  {:class => "portfolio_img"}%>
  </div>
	
	<h1>Galerie</h1>
	
  <div id="flash" class="portfolio scrollable">
    <%= porfolio_entry.images.each do |image| %>
      <div class="img_resize">
        <%= image_fu image, '105x92',  {:class => "thumbnails_img"} %>
      </div>
    <%= end %>
	</div>

  <div id="month_switcher"><a href="#" class="left"></a><p><%= porfolio_entry.title %></p><a href="#" class="right"></a></div>
	
</div>
