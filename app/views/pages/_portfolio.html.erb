<div class="block <%= odd ? 'left' : 'right' %> ">
 <%# randomly chosen portfolio entry  %>
 <%  portfolio_entry_index = rand(section.portfolio_entries.length) %>

  <div class="layer">
    <%= image_fu section.portfolio_entries[portfolio_entry_index].images.first, '420x300',  {:class => "portfolio_img"}%>
  </div>
	
	<h1>Galerie</h1>
<% section.portfolio_entries.each_with_index do  |portfolio_entry,i| %>
  <div id="flash" class="portfolio scrollable <%= 'current' if i == portfolio_entry_index %>">
    <% portfolio_entry.images.each do |image| %>
      <div class="img_resize">
        <%= link_to image_fu(image, '105x92',  {:class => "thumbnails_img"}) , image.url ,  {:rel => 'prettyPhoto[porfolio]', :title => '' } %>
      </div>
    <% end %>
	</div>
<% end %>
  <div id="month_switcher"><a href="#" class="left"></a><p><%= section.portfolio_entries[portfolio_entry_index].title %></p><a href="#" class="right"></a></div>
	
</div>

<% content_for :javascripts do %>
  <%= javascript_include_tag 'jquery.prettyPhoto.js' %>
<% end %>

<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "prettyPhoto" %>
<% end %>


