<div class="portfolio <%='section_' + in_section(@page).id.to_s %>">

<div id="left_col">
  <h2><%=raw date_for(@event) + ' ' +  @event.title %></h2>
  <p><%=raw @event.description %></p>
  <br />
  <% unless @event.location.blank? %>
   <h3> Lieu :</h3>
   <p> <%=raw @event.location %>    </p>
   <br />
   <% unless @event.adress.blank? %>
     <%= link_to image_tag(@map_url), 'http://maps.google.com/maps?q=' + @event.adress %>
   <% end %>
  <% end %>
</div>

  <div id="right_col">
   <h2><%= t('.other') %></h2>
   <ul id="events">
     <% @events.each do |event| %>
       <li>
       <%= link_to event.title, event_path(event) %>
       </li>
     <% end %>
   </ul>
  </div>
</div>
