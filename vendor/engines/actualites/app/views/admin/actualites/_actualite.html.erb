<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(actualite) -%>">
  <span class='title'>
    <%= actualite.titre %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), actualite_path(actualite),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_actualite_path(actualite),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_actualite_path(actualite),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => actualite.titre),
        :method => :delete %>
  </span>
</li>
