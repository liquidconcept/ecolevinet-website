<% content_for :body_content_left do %>
  <ul id="actualites_brulante">
    <% @actualites_brulantes.each do |actualite| %>
      <li>
        <%= link_to actualite.titre, actualite_path(actualite) %>
      </li>
    <% end %>
  </ul>
  <ul id="actualites_simple">
    <% @actualites_normales.each do |actualite| %>
      <li>
        <%= link_to actualite.titre, actualite_path(actualite) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
