<% content_for :body_content_left do %>
  <ul id="hot_news">
    <% @hot_news.each do |news| %>
      <li>
        <%= link_to news.titre, news_path(news) %>
      </li>
    <% end %>
  </ul>
  <ul id="current_news">
    <% @current_news.each do |news| %>
      <li>
        <%= link_to news.titre, news_path(news) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
