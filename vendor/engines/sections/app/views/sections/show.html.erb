<% if @section.actualites.brulantes.any? %>
  <div id="block">
    <h3>A la une</h3>
    <% @section.actualites.brulantes.each do |actualite| %>
      <%= link_to actualite.title, '/actualites/' + actualite.id.to_s %>
    <% end %>
  </div>
<% end %>
<% if @section.portfolio_entries.any? %>
  <div id="block">
    <h3> Galeries Photo</h3>
    <% @section.portfolio_entries.each do |portfolio_entry| %>
      <%= link_to portfolio_entry.title, '/portfolio/' + portfolio_entry.title %> :
      <%= raw portfolio_entry.body %>
    <% end %>
  </div>
<% end %>

<% if @section.page.children.any? %>
  <% @section.page.children.each do |child| %>
    <% if child.title == "Actualites" &&  @section.actualites.normales.any? %>
        <div id="block">
          <h3> Actualit√©s</h3>
          <% @section.actualites.normales.each do |actualite| %>
            <%= link_to actualite.titre, '/actualites/' + actualite.id.to_s %>
          <% end %>
        </div>
    <% else %>
        <div id="block">
          <h3><%= child.title %> </h3>
          <%= link_to child.title, child.url %>
        </div>
    <% end %>
  <% end %>
<% end %>
