<% articles_rendered = false%>
<% @section.page.children.each do |child| %>
  <% case child.title %>
  <% when "news" %>
    <%= render :partial => 'news',  :locals => {:section => @section}  if @section.news.any?%>
  <% when "Agenda" %>
    <%= render :partial => 'agendas',      :locals => {:section => @section} %>
  <% when "Galerie" %>
    <%= render :partial => 'galeries', :locals => {:section => @section} if @section.portfolio_entries.any? %>
  <% else %>
    <%= render :partial => 'articles',     :locals => {:section => @section} unless articles_rendered %>
    <% articles_rendered = true %>
  <% end %>
<% end %>
