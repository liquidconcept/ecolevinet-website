<% content_for :body_content_title do %>
  <%= @section.nom %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Nom</h1>
    <p>
      <%=raw @section.nom %>
    </p>
  </section>
  <section>
    <h1>Titre</h1>
    <p>
      <%=raw @section.titre %>
    </p>
  </section>
  <section>
    <h1>Chapeau</h1>
    <p>
      <%=raw @section.chapeau %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @section.image, nil %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="sections">
      <% @sections.each do |section| %>
        <li>
          <%= link_to section.nom, section_path(section) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
