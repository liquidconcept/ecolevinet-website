<%= form_for [:admin, @section] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @section,
          :include_object_name => true
        } %>

  <div class='field'>
    <%= f.label "Titre" -%>
    <%= f.text_field :title, :class => 'larger widest'  -%>
  </div>

  <div class='field'>
    <%= f.label "Titre de l'en-tÃªte" -%>
    <%= f.text_field :heading_title, :class => 'widest'  -%>
  </div>

  <div class='field'>
    <%= f.label "Chapeau" -%>
    <%= f.text_field :heading, :class => 'widest'  -%>
  </div>

  <div class='field'>
    <%= f.label "lien" -%>
    <%= f.text_field :link , :class => 'widest' -%>
  </div>

  <div class='field'>
    <%= f.label :image -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
          :f => f,
          :field => :image_id,
          :image => @section.image,
          :toggle_image_display => false
        } %>
  </div>

  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => true,
                :delete_title => t('delete', :scope => 'admin.sections.section'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @section.title)
              } %>
<% end -%>
