<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(news_item) -%>">
<span class='title'>
    
    <%= l(news_item.created_at.to_date) + " -"%>
    <%= news_item.title %>
    <% if news_item.hot %>
      <%= image_tag 'Fire-flame-icon.jpg' %>
    <% end%>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), news_item_path(news_item),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_news_item_path(news_item),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_news_item_path(news_item),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => news_item.title),
        :method => :delete %>
  </span>
</li>
