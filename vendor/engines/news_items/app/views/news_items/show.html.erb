<% content_for :body_content_title do %>
  <%= @news_item.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @news_item.title %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @news_item.content %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%=raw @news_item.image_id %>
    </p>
  </section>
  <section>
    <h1>End Date</h1>
    <p>
      <%=raw @news_item.end_date %>
    </p>
  </section>
  <section>
    <h1>Link</h1>
    <p>
      <%=raw @news_item.link %>
    </p>
  </section>
  <section>
    <h1>Hot</h1>
    <p>
      <%=raw @news_item.hot %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="news_items">
      <% @news_items.each do |news_item| %>
        <li>
          <%= link_to news_item.title, news_item_path(news_item) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
